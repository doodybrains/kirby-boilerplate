{
  "scripts": {
    "dev": "npm run development",
    "development": "cross-env NODE_ENV=development node_modules/webpack/bin/webpack.js --progress --hide-modules --config=$npm_package_config_webpack",
    "watch": "npm run development -- --watch",
    "watch-poll": "npm run watch -- --watch-poll",
    "hot": "cross-env NODE_ENV=development node_modules/webpack-dev-server/bin/webpack-dev-server.js --inline --hot --config=$npm_package_config_webpack",
    "prod": "npm run production",
    "production": "cross-env NODE_ENV=production node_modules/webpack/bin/webpack.js --no-progress --hide-modules --config=$npm_package_config_webpack"
  },
  "config": {
    "webpack": "node_modules/laravel-mix/setup/webpack.config.js"
  },
  "dependencies": {
    "tailwindcss": "^0.6"
  },
  "devDependencies": {
    "autoprefixer": "^8.6",
    "cross-env": "^5.2",
    "glob-all": "^3.1",
    "laravel-mix": "^2.1",
    "laravel-mix-purgecss": "^2.2.0"
  }
}
